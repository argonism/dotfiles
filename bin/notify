#!/bin/bash


echo url is $URL

curl -X POST \
  $URL \
  --data-urlencode "payload={\"channel\": \"#himkt-channel\",\
  \"username\": \"himkt-auto\",\
  \"text\": \"`echo $@` has started.\",\
  \"icon_emoji\": \":vim:\"}" &> /dev/null

# execute main command
$@

curl -X POST \
  $URL \
  --data-urlencode "payload={\"channel\": \"#himkt-channel\",\
  \"username\": \"himkt-bot\",\
  \"text\": \"`echo $@` has terminated.\n\",\
  \"icon_emoji\": \":vim:\"}" &> /dev/null
